{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test"
  ]
}
